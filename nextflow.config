process {
    
    max_memory                 = '32.GB'
    max_cpus                   = 1
    max_time                   = '2.h'
    
    withLabel:process_high {
        cpus   = { check_max( 1,    'cpus'    ) }
        memory = { check_max( 32.GB, 'memory'  ) }
        time   = { check_max( 1.h,  'time'    ) }
    }
}

process.executor = 'local'
